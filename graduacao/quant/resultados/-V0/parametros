#Parâmetros do potencial barreira
V_0 = -1000
alfa = 1

def V(r):
    return V_0 * np.exp(-alfa * r)

### Parâmetros de simulação ###

#Intervalo no eixo x
x_i = -0.5
x_f = 0.5

#Intervalo temporal
t_0 = 0
t_f = 0.1

#Passos
dt = 0.0001
r = 0.075
dx = np.sqrt(dt / (2 * r))
dx2 = dx ** 2
